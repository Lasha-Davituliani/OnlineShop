@model OnlineShop.DAL.ViewModels.ReportViewModel

<h1>Sales Amounts Aggregated by Customers and Years</h1>

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Year</th>
            <th>Sales Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model.SalesByCustomersAndYears)
        {
            <tr>
                <td>@report.Label</td>
                <td>@report.Label</td> <!-- Assuming the label includes the year -->
                <td>@report.SalesAmount</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to Reports</a>
