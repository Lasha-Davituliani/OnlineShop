@model OnlineShop.DAL.ViewModels.ReportViewModel

<h1>Top 10 Products by Sales Amount</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Sales Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Top10ProductsBySalesAmount)
        {
            <tr>
                <td>@product.Label</td>
                <td>@product.SalesAmount</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to Reports</a>
