@model OnlineShop.DAL.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>ID:</strong> @Model.ProductId</p>        
        <p class="card-text"><strong>Product Number:</strong> @Model.ProductNumber</p>
        <p class="card-text"><strong>Color:</strong> @Model.Color</p>
        <p class="card-text"><strong>List Price:</strong> @Model.ListPrice</p>
        <p class="card-text"><strong>Modified Date:</strong> @Model.ModifiedDate</p>
        <p class="card-text"><strong>Size:</strong> @Model.Size</p>
        <p class="card-text"><strong>Category:</strong> @Model.ProductCategoryId</p>
        <p class="card-text"><strong>Model:</strong> @Model.ProductModelId</p>
        <p class="card-text"><strong>Number Of Orders:</strong> @Model.NumberOfOrders</p>
        <p class="card-text"><strong>Sell Start Date:</strong> @Model.SellStartDate</p>
        <p class="card-text"><strong>Sell End Date:</strong> @Model.SellEndDate</p>
        
        
        
    </div>
</div>


<div class="mt-3">
    <a href="@Url.Action("Edit", "Product", new { id = Model.ProductId })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Delete", "Product", new { id = Model.ProductId })" class="btn btn-danger">Delete</a>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to List</a>
</div>
